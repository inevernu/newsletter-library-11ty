<ul class="postlist">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <p><a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a> 
    <small><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | mypostDate }}</time>

    {% if post.data.categories | length %}
       &mdash; Seen in <strong>{{ post.data.categories[0] | replace("No", "No.") }}</strong>
    {% endif %}
    {% if post.data.layout === 'article' %}
       &mdash; Article
    {% endif %}
    </small></p>
    {% if post.data.layout === 'article' %}
      <div class="the-excerpt">{{ post.data.excerpt }}</div>
    {% endif %}
    {% if post.data.layout === 'dispatch' %}
      <div class="the-excerpt">{{ post.data.excerpt }}</div>
    {% endif %}
  </li>
{% endfor %}
</ul>
